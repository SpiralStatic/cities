<form class="col s12 m8 offset-m2 l6 offset-l3" action="/<%= city.id %>" method="post">
    <% if (city.id !== "") { %>
        <input type="hidden" name="_method" value="put">
    <% } %>

    <div class="input-field">
        <i class="material-icons prefix">info</i>
        <label for="name">Name</label>
        <input type="text" class="validate" name="name" class="validate" value="<%= city.name %>" required>
    </div>

    <div class="input-field">
        <i class="material-icons prefix">link</i>
        <label for="image">Image URL</label>
        <input type="text" class="validate" name="image" class="validate" value="<%= city.image %>">
    </div>

    <div class="input-field">
        <i class="material-icons prefix">language</i>
        <label for="country">Country</label>
        <input type="text" class="validate" name="country" class="validate" value="<%= city.country %>" required>
    </div>

    <div class="input-field">
        <i class="material-icons prefix">perm_identity</i>
        <label for="population">Population</label>
        <input type="number" name="population" class="validate" value="<%= city.population %>" min="1000000" max="50000000" required>
    </div>

    <div class="input-field">
        <i class="material-icons prefix">assessment</i>
        <label for="ranking">Ranking</label>
        <input type="number" name="ranking" class="validate" value="<%= city.ranking %>" min="1" max="70" required>
    </div>

    <div class="input-field">
        <i class="material-icons prefix">star</i>
        <label for="landmarks">Landmarks</label>
        <input type="text" name="landmarks" value="<%= city.landmarks %>">
    </div>

    <input class="btn blue darken-4 hoverable waves-effect waves-ripples" type="submit" value="Submit City">
</form>
